prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include
supported_protocols="HTTP HTTPS TELNET"
supported_features="Largefile SSL threadsafe"

Name: libcurl
URL: https://curl.se/
Description: Library to transfer files with HTTP, FTP, etc.
Version: 8.16.0
Requires: 
Requires.private: openssl
Libs: -L${libdir} -lcurl 
Libs.private:  -lssl -lcrypto
Cflags: -I${includedir} 
Cflags.private: -DCURL_STATICLIB
